            <desc_signature _toc_name="Color" _toc_parts="('pytamaro.color', 'Color')" class=""
                            classes="sig sig-object py" fullname="Color" ids="pytamaro.color.Color"
                            module="pytamaro.color">
                <desc_annotation xml:space="preserve">class
                    <inline classes="w"> </inline>
                </desc_annotation>
                <desc_name classes="sig-name descname" xml:space="preserve">Color</desc_name>
            </desc_signature>
            <desc_content>
                <paragraph>Represents a color.
                    A color also has a degree of opacity,
                    from completely transparent (like the color <title_reference>transparent</title_reference>)
                    to completely opaque (like the color <title_reference>red</title_reference>).
                </paragraph>
            </desc_content>
        </desc>
